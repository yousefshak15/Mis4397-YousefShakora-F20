<div class = "container">
  <div class = "row">
    <div class="col">
      
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Department</h1>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Name</th>
      <th>Description</th>
       <th>Code</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.store.name %></td>
         <td><%= department.name %></td>
        <td><%= department.description %></td>
         <td><%= department.code%></td>
          <td><%= link_to department.store.name, store_path(department.store) if department.store %></td>
        <td><%= link_to 'Show', department  %></td>
        <td><%= link_to 'Edit', edit_department_path(department) %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

